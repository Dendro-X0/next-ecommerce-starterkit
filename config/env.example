# ------------------------------------------------------------------
#   Backend API (apps/api) — Hono + Better Auth
# ------------------------------------------------------------------
WEB_ORIGIN=http://localhost:3000
DATABASE_URL=postgres://user:password@localhost:5432/ecommerce
BETTER_AUTH_SECRET=replace-with-strong-secret

# ------------------------------------------------------------------
#   Cookie strategy flags (see packages/auth/auth.ts)
# ------------------------------------------------------------------
# Enable for cross-origin dev (different ports/domains)
ENABLE_CROSS_SITE_COOKIES=true
# Enable for production subdomains (api.example.com + app.example.com)
ENABLE_CROSS_SUBDOMAIN_COOKIES=false

# ------------------------------------------------------------------
#   OAuth providers — required for social login
# ------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ------------------------------------------------------------------
#   Mail provider (packages/mail)
# ------------------------------------------------------------------
RESEND_API_KEY=
EMAIL_FROM="Ecommerce <no-reply@your-domain.com>"

# SMTP (use for local testing with MailHog)
# Set MAIL_PROVIDER=SMTP to route emails through SMTP instead of Resend
MAIL_PROVIDER=SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# ------------------------------------------------------------------
#   Frontend (apps/web)
# ------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development

# ------------------------------------------------------------------
#   Contact API
# ------------------------------------------------------------------
# Optional, used for Resend delivery in contact route. If missing, delivery is skipped.
# When set, emails go to the first address in ADMIN_EMAILS, or fallback to EMAIL_FROM.
# ADMIN_EMAILS is validated in API env; define here at root if desired
# ADMIN_EMAILS=admin@example.com
# Max requests per IP within the window
CONTACT_RATE_LIMIT_MAX=5
# Window length in ms
CONTACT_RATE_LIMIT_WINDOW_MS=60000
