# Environment configuration for local development
# Copy to apps/web/.env.local if you prefer per-app files. These keys are used by Next.js app and co-located API routes.

# ---------- Core ----------
# Database
DATABASE_URL=

# Origins
WEB_ORIGIN=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------- Authentication ----------
BETTER_AUTH_SECRET=
ENABLE_CROSS_SITE_COOKIES=true
ENABLE_CROSS_SUBDOMAIN_COOKIES=false

# OAuth providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ---------- Admin ----------
# Comma-separated list of admin emails
ADMIN_EMAILS=

# ---------- Emails ----------
# Resend (preferred in prod)
RESEND_API_KEY=
EMAIL_FROM=

# SMTP (local/dev). Set MAIL_PROVIDER=SMTP to use these instead of Resend
MAIL_PROVIDER=
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# ---------- Rate Limiting ----------
API_RATE_LIMIT_MAX=120
API_RATE_LIMIT_WINDOW_MS=60000
CONTACT_RATE_LIMIT_MAX=5
CONTACT_RATE_LIMIT_WINDOW_MS=60000

# ---------- Payments ----------
# Stripe
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=

# ---------- Redis (Upstash) ----------
# Optional: enable distributed rate limiting in production
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
